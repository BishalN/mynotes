generator client {
    provider = "prisma-client-js"
}

datasource db {
    url      = env("DATABASE_URL")
    provider = "postgresql"
}

model User {
    id                 Int     @id @default(autoincrement())
    email              String? @unique
    password           String?
    name               String?
    notes              Note[]
    imageUrl           String?
    bio                String?
    googleId           String?
    facebookId         String?
    githubId           String?
    localEmailVerified Boolean @default(false)
}

model Note {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    title     String
    content   String
    author    User?    @relation(fields: [authorId], references: [id])
    authorId  Int?
}
